.header {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  background: #eee;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  z-index: 1;
  text-align: center;
}
.header .publish {
  position: absolute;
  top: 0;
  right: 0;
  background: #eee;
  width: 88rpx;
  height: 88rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  text-align: center;
}
.scroll {
  margin-top: 88rpx;
}

.main .itemRoot {
  padding-left: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.imgRoot {
  margin-left: 40rpx;
}

.imgList {
  display: inline-block;
}

.img {
  margin: 5rpx;
  position: relative;
  width: 155rpx;
  height: 155rpx;
}